@model Assignment2.DataAccess.Models.Tag

<form method="post" asp-page-handler="@(Model.TagId == 0 ? "Create" : "Edit")">
    <div class="modal-header">
        <h5 class="modal-title">@(Model.TagId == 0 ? "Create New" : "Edit") Tag</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <input type="hidden" asp-for="TagId" />
        <div class="mb-3">
            <label asp-for="TagName" class="form-label"></label>
            <input asp-for="TagName" class="form-control"
                   required maxlength="100" />
            <span asp-validation-for="TagName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Note" class="form-label"></label>
            <textarea asp-for="Note" class="form-control"
                      required maxlength="255" rows="3"></textarea>
            <span asp-validation-for="Note" class="text-danger"></span>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">Save Tag</button>
    </div>
</form>


@{
    // Load script validation cho form này
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}