@page
@model Presentation.Pages.Account.ProfileModel

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3>Profile</h3>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success">@TempData["Success"]</div>
                    }

                    <form method="post">
                        <input type="hidden" asp-for="Account.AccountId" />
                        <input type="hidden" asp-for="Account.AccountEmail" />
                        <input type="hidden" asp-for="Account.AccountRole" />

                        <div class="form-group mb-3">
                            <label asp-for="Account.AccountName">Name</label>
                            <input asp-for="Account.AccountName" class="form-control" />
                            <span asp-validation-for="Account.AccountName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Account.AccountEmail">Email</label>
                            <input asp-for="Account.AccountEmail" class="form-control" readonly />
                        </div>

                        <div class="form-group mb-3">
                            <label for="NewPassword">New Password (leave blank to keep current)</label>
                            <input type="password" id="NewPassword" name="NewPassword" class="form-control" />
                            @if (!string.IsNullOrEmpty(Model.PasswordError))
                            {
                                <span class="text-danger">@Model.PasswordError</span>
                            }
                        </div>

                        <button type="submit" class="btn btn-primary">Update Profile</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}