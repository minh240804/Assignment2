@page "{id:int?}"
@model Presentation.Pages.Account.FormModel
@{
    Layout = null;
}

<div class="modal-header">
    <h5 class="modal-title">@(Model.IsCreate ? "Create" : "Edit") Account</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>

<form method="post">
    <div class="modal-body">
        @if (!Model.IsCreate)
        {
            <input type="hidden" asp-for="Account.AccountId" />
        }

        <div class="form-group mb-3">
            <label asp-for="Account.AccountName">Name</label>
            <input asp-for="Account.AccountName" class="form-control" required />
            <span asp-validation-for="Account.AccountName" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Account.AccountEmail">Email</label>
            @if (Model.IsCreate)
            {
                <input asp-for="Account.AccountEmail" type="email" class="form-control" />
            }
            else
            {
                <input type="email" class="form-control" value="@Model.Account.AccountEmail" readonly />
                <input type="hidden" asp-for="Account.AccountEmail" />
            }
            <span asp-validation-for="Account.AccountEmail" class="text-danger"></span>
        </div>

        @if (Model.IsCreate)
        {
            <div class="form-group mb-3">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" type="password" class="form-control" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        }

        <div class="form-group mb-3">
            <label asp-for="Account.AccountRole">Role</label>
            <select asp-for="Account.AccountRole" class="form-control" required>
                <option value="">Select Role</option>
                <option value="1">Staff</option>
                <option value="2">Lecturer</option>
            </select>
            <span asp-validation-for="Account.AccountRole" class="text-danger"></span>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">@(Model.IsCreate ? "Create" : "Save changes")</button>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}